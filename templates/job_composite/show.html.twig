{% extends 'base.html.twig' %}

{% block title %}JobComposite{% endblock %}

{% block body %}
    <h1>JobComposite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job_composite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ job_composite.name }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ job_composite.state }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ job_composite.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ListDestination</th>
                <td>{{ job_composite.listDestination ? job_composite.listDestination|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>NextDateExec</th>
                <td>{{ job_composite.nextDateExec ? job_composite.nextDateExec|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_job_composite_index') }}">back to list</a>

    <a href="{{ path('app_job_composite_edit', {'id': job_composite.id}) }}">edit</a>

    {{ include('job_composite/_delete_form.html.twig') }}
{% endblock %}
